<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Kategoriler</h3>
                    </div>
                    <div class="card-body">
                        <table id="categories-grid" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Kategori Adı</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
}

@section scripts {

    <!-- DataTables  & Plugins -->
    <script src="~/admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/admin/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/admin/plugins/jszip/jszip.min.js"></script>
    <script src="~/admin/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/admin/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/admin/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>

    <script>
        $(function () {
            $('#categories-grid').DataTable({
                responsive: true,
                lengthChange: false,
                autoWidth: false,
                searching: false,
                ajax: {
                    url: '/Admin/Category/CategoryList',
                    type: 'POST',
                },
                columns: [
                    { data: 'categoryId', width: '15%' },
                    { data: 'categoryName' },
                    {
                        data: 'categoryId',
                        render: function(data, type, row) {
                            return `
                                <button class="btn btn-outline-primary btn-sm edit-btn mr-1" data-id="${data}">Düzenle</button>
                                <button class="btn btn-outline-danger btn-sm delete-btn" data-id="${data}">Sil</button>
                            `;
                        },
                        orderable: false,
                        width: '15%',
                        className: 'text-center'
                    }
                ],
            });

            $('#categories-grid').on('click', '.edit-btn', function() {
                var id = $(this).data('id');
                // Edit işlemini burada yap
                console.log('Edit ID:', id);
            });

            $('#categories-grid').on('click', '.delete-btn', function() {
                var id = $(this).data('id');
                // Delete işlemini burada yap
                console.log('Delete ID:', id);
            });
        });
    </script>
}
