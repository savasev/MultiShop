@{
    ViewBag.PageTitle = "Kategoriler";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="m-0">@ViewBag.PageTitle</h2>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-primary float-right" asp-action="Create">Yeni Kategori</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-success card-outline">
                    <div class="card-header with-border clearfix">
                        <h3 class="card-title">Kategoriler</h3>
                    </div>
                    <div class="card-body">
                        <table id="categories-grid" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Kategori Adı</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section styles {
    @await Html.PartialAsync("Partials/_DataTableStyles")
}

@section scripts {
    @await Html.PartialAsync("Partials/_DataTableScripts")

    <script>
        $(function () {
            $('#categories-grid').DataTable({
                responsive: true,
                lengthChange: false,
                autoWidth: false,
                searching: false,
                ajax: {
                    url: '/Admin/Category/CategoryList',
                    type: 'POST',
                },
                columns: [
                    { data: 'categoryId', width: '15%' },
                    { data: 'categoryName' },
                    {
                        data: 'categoryId',
                        render: function(data, type, row) {
                            return `
                                <button class="btn btn-outline-primary btn-sm edit-btn mr-1" data-id="${data}">Düzenle</button>
                                <button class="btn btn-outline-danger btn-sm delete-btn" data-id="${data}">Sil</button>
                            `;
                        },
                        orderable: false,
                        width: '15%',
                        className: 'text-center'
                    }
                ],
            });

            $('#categories-grid').on('click', '.edit-btn', function() {
                var id = $(this).data('id');
                // Edit işlemini burada yap
                console.log('Edit ID:', id);
            });

            $('#categories-grid').on('click', '.delete-btn', function() {
                var id = $(this).data('id');
                // Delete işlemini burada yap
                console.log('Delete ID:', id);
            });
        });
    </script>
}
