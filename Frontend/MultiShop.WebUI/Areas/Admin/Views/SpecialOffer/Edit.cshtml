@model EditSpecialOfferDto
@{
    ViewBag.PageTitle = "Özel Teklif Düzenle";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-6">
                <h2 class="m-0">@ViewBag.PageTitle</h2>
            </div>
            <div class="col-md-6">
                <a class="btn btn-primary float-right" asp-action="List">Tüm Özel Teklifler</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-danger card-outline">
                    <div class="card-header with-border clearfix">
                        <h3 class="card-title">@ViewBag.PageTitle</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-11 offset-1">
                                <form class="form-horizontal" asp-action="Edit" method="post">
                                    <input asp-for="SpecialOfferId" type="hidden" />

                                    <div class="form-group row">
                                        <label asp-for="Title" class="col-md-2 col-form-label text-right">Başlık</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" asp-for="Title">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="SubTitle" class="col-md-2 col-form-label text-right">Alt Başlık</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" asp-for="SubTitle">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ImageUrl" class="col-md-2 col-form-label text-right">Resim Url</label>
                                        <div class="col-md-10">
                                            <input type="text" class="form-control" asp-for="ImageUrl">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-4 offset-md-2">
                                            <button type="submit" class="btn btn-success">Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
