@model CreateProductDto
@{
    ViewBag.PageTitle = "Yeni Ürün";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="m-0">@ViewBag.PageTitle</h2>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-primary float-right" asp-action="List">Tüm Ürünler</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-danger card-outline">
                    <div class="card-header with-border clearfix">
                        <h3 class="card-title">@ViewBag.PageTitle</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-11 offset-1">
                                <form class="form-horizontal" asp-action="Create" method="post">
                                    <div class="form-group row">
                                        <label asp-for="ProductName" class="col-sm-2 col-form-label">Ürün Adı</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" asp-for="ProductName">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProductDescription" class="col-sm-2 col-form-label">Ürün Açıklama</label>
                                        <div class="col-sm-10">
                                            <textarea class="form-control" asp-for="ProductDescription"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="CategoryId" class="col-sm-2 col-form-label">Kategori</label>
                                        <div class="col-sm-4">
                                            <select asp-for="CategoryId" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProductPrice" class="col-sm-2 col-form-label">Ürün Fiyatı</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" asp-for="ProductPrice">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProductStock" class="col-sm-2 col-form-label">Ürün Stok</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" asp-for="ProductStock">
                                        </div>
                                    </div>
                                    
                                    <div class="form-group row">
                                        <div class="col-sm-4 offset-sm-2">
                                            <button type="submit" class="btn btn-success">Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
