@model EditProductDto
@{
    ViewBag.PageTitle = "Ürün Düzenle";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-md-6">
                <h2 class="m-0">@ViewBag.PageTitle</h2>
            </div>
            <div class="col-md-6">
                <a class="btn btn-primary float-right" asp-action="List">Tüm Ürünler</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-danger card-outline">
                    <div class="card-header with-border clearfix">
                        <h3 class="card-title">@ViewBag.PageTitle</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-11 offset-1">
                                <form class="form-horizontal" asp-action="Edit" method="post">
                                    <input asp-for="ProductId" type="hidden" />

                                    <div class="form-group row">
                                        <label asp-for="ProductName" class="col-md-2 col-form-label">Ürün Adı</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" asp-for="ProductName">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProductDescription" class="col-md-2 col-form-label">Ürün Açıklama</label>
                                        <div class="col-md-8">
                                            <textarea class="form-control" asp-for="ProductDescription"></textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="CategoryId" class="col-md-2 col-form-label">Kategori</label>
                                        <div class="col-md-8">
                                            <select asp-for="CategoryId" asp-items="Model.AvailableCategories" class="form-control"></select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProductImageUrl" class="col-md-2 col-form-label">Ürün Resim Url</label>
                                        <div class="col-md-8">
                                            <input type="text" class="form-control" asp-for="ProductImageUrl">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProductPrice" class="col-md-2 col-form-label">Ürün Fiyatı</label>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control" asp-for="ProductPrice">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label asp-for="ProductStock" class="col-md-2 col-form-label">Ürün Stok</label>
                                        <div class="col-md-3">
                                            <input type="text" class="form-control" asp-for="ProductStock">
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-4 offset-md-2">
                                            <button type="submit" class="btn btn-success">Kaydet</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
