@{
    ViewBag.PageTitle = "Ürünler";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="m-0">@ViewBag.PageTitle</h2>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-primary float-right" asp-action="Create">Yeni Kategori</a>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-success card-outline">
                    <div class="card-header with-border clearfix">
                        <h3 class="card-title">Ürünler</h3>
                    </div>
                    <div class="card-body">
                        <table id="products-grid" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Kategori Adı</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>